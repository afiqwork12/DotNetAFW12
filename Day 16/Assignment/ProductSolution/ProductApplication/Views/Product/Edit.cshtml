@model ProductApplication.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
    <h1>Edit Product</h1>
    <div class="mb-3">
        <label class="form-label">Product ID</label>
        @Html.EditorFor(m => m.Id, new { @htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        @Html.EditorFor(m => m.Name, new { @htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        <label class="form-label">Product Price</label>
        @Html.EditorFor(m => m.Price, new { @htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        <label class="form-label">Product Supplier Id</label>
        @Html.EditorFor(m => m.SupplierId, new { @htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        <label class="form-label">Product Quantity</label>
        @Html.EditorFor(m => m.Quantity, new { @htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        <label class="form-label">Product Remarks</label>
        @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control" })
    </div>
    <br />
    <div class="mb-3">
        <input class="btn btn-success" type="submit" name="submit" value="Edit Product" />
    </div>
}